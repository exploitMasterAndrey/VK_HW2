<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level - %msg%n"/>
        </Console>

        <File name="file" fileName="logs/app.log">
            <PatternLayout>
                <Pattern>%m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="logger.ConsoleLogger" level="info" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>

        <Logger name="logger.FileLogger" level="info" additivity="false">
            <AppenderRef ref="file"/>
        </Logger>

    </Loggers>
</Configuration>